        stroke-width: 1px;
        stroke: #222;
}

/* This code from: https://jqueryui.com/autocomplete/#maxheight */
.ui-autocomplete {
    max-height: 100px;
    overflow-y: auto;
    /* prevent horizontal scrollbar */
    overflow-x: hidden;
    font-family: 'EB Garamond', serif;
    font-size: small;
}
/* IE 6 doesn't support max-height
 * we use height instead, but this forces the menu to always be this tall
 */
* html .ui-autocomplete {
    height: 100px;
}

.ui-memberSelect label {
    font-family: 'EB Garamond', serif;
    font-weight: bold;
    color: rgba(0, 0, 128, 1);
    font-size: larger;
}

